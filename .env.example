# ==============================================
# AJR System - Environment Variables
# ==============================================
# Copie este arquivo para .env e configure os valores

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_NAME=ajr_system
DATABASE_USER=postgres
DATABASE_PASSWORD=sua_senha_segura_aqui
DATABASE_HOST=database
DATABASE_PORT=5432

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
APP_NAME=AJR System API
DEBUG=False

# ==============================================
# DOCKER PORTS
# ==============================================
# Portas expostas no host
BACKEND_PORT=8000
FRONTEND_PORT=80
PGADMIN_PORT=5050

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# URL da API (usado no build do frontend)
VITE_API_URL=http://localhost:8000

# ==============================================
# PGADMIN (Opcional - apenas para desenvolvimento)
# ==============================================
PGADMIN_EMAIL=admin@ajr.com
PGADMIN_PASSWORD=admin

# ==============================================
# SECURITY (PRODUÇÃO)
# ==============================================
# IMPORTANTE: Altere estas configurações em produção!
# SECRET_KEY=gere-uma-chave-secreta-forte-aqui
# ALLOWED_ORIGINS=https://seudominio.com
